{% extends 'base.html.twig' %}

{% block title %}EcoRestore - Built for a Greener Future{% endblock %}

{% block body %}
<!-- Custom Navbar for Landing Page -->
<!-- Task 2: Sticky Navbar (Tailwind: sticky top-0, z-50, shadow-sm) -->
<nav class="bg-white sticky top-0 z-50 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex">
                <!-- Task 1: Integrate Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <a href="{{ path('app_home') }}" class="flex items-center gap-2">
                        <img src="{{ asset('images/logo.png') }}" alt="EcoRestore Logo" class="h-10 w-auto inline-block align-text-top">
                        <span class="font-bold text-2xl text-green-600">EcoRestore</span>
                    </a>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                <a href="{{ path('app_login') }}" class="text-gray-500 hover:text-gray-900 font-medium text-sm">Login</a>
                <a href="{{ path('app_register') }}" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                    Get Started
                </a>
            </div>
        </div>
    </div>
</nav>

<!-- 1. HERO SECTION -->
<div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
        <img class="w-full h-full object-cover" src="{{ asset('images/hero-bg.png') }}" alt="Sustainable Construction Site">
        <div class="absolute inset-0 bg-gray-900 bg-opacity-60"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl mb-6">
            Restoration Over Replacement.<br class="hidden sm:block">
            Built for a Greener Future.
        </h1>
        <p class="mt-6 text-xl text-gray-300 max-w-3xl">
            EcoRestore is the first intelligent platform designed to track, manage, and calculate the carbon impact of sustainable restoration projects. Stop tossing materials—start restoring them.
        </p>
        <div class="mt-10 flex space-x-4">
            <a href="{{ path('app_register') }}" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-green-700 bg-white hover:bg-gray-50">
                Start Your First Project
            </a>
            <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                Login
            </a>
        </div>
    </div>
</div>

<!-- Task 3: IMPACT STATS BAR -->
<div class="bg-green-700 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center text-white">
            <div>
                <div class="text-3xl font-bold">500+</div>
                <div class="text-green-100 mt-1">Active Projects</div>
            </div>
            <div>
                <div class="text-3xl font-bold">12,000kg</div>
                <div class="text-green-100 mt-1">CO2 Emissions Saved</div>
            </div>
            <div>
                <div class="text-3xl font-bold">150+</div>
                <div class="text-green-100 mt-1">Sustainable Materials</div>
            </div>
        </div>
    </div>
</div>

<!-- 2. THE "WHY" SECTION -->
<div class="bg-gradient-to-b from-white to-green-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-extrabold text-green-900 sm:text-4xl">
            Why Restore?
        </h2>
        <p class="mt-4 text-lg text-gray-500 max-w-3xl mx-auto">
            The construction industry generates tons of unnecessary waste every year. EcoRestore empowers you to quantify the environmental impact of your work, proving that restoration isn't just better for the planet—it's better for your bottom line.
        </p>
    </div>
</div>

<!-- 3. FEATURES GRID -->
<div class="py-16 bg-sky-50 overflow-hidden lg:py-24">
    <div class="relative max-w-xl mx-auto px-4 sm:px-6 lg:px-8 lg:max-w-7xl">
        <div class="relative">
            <h2 class="text-center text-3xl leading-8 font-extrabold tracking-tight text-green-900 sm:text-4xl">
                A Unified Platform for Sustainability
            </h2>
        </div>

        <div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
            <div class="relative">
                <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
                    Real-Time Impact Scores
                </h3>
                <p class="mt-3 text-lg text-gray-500">
                    Instantly calculate the CO2 emissions saved by restoring vs. replacing. Our algorithms provide accurate data to showcase your eco-gains.
                </p>
            </div>
            <div class="mt-10 -mx-4 relative lg:mt-0" aria-hidden="true">
                 <img class="relative mx-auto rounded-lg shadow-lg" width="490" src="{{ asset('images/feature-analytics.png') }}" alt="Carbon Analytics Interface">
            </div>
        </div>

        <div class="relative mt-12 sm:mt-16 lg:mt-24">
            <div class="lg:grid lg:grid-flow-row-dense lg:grid-cols-2 lg:gap-8 lg:items-center">
                <div class="lg:col-start-2">
                    <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
                        Sustainable Inventory
                    </h3>
                    <p class="mt-3 text-lg text-gray-500">
                        Access our library of <b>150+ eco-friendly materials</b>. Track inventory, manage costs, and ensure every choice aligns with your sustainability goals.
                    </p>
                </div>
                <div class="mt-10 -mx-4 relative lg:mt-0 lg:col-start-1">
                    <img src="{{ asset('images/feature-inventory.png') }}" alt="Material Database" class="w-full h-auto rounded-lg shadow-lg relative mx-auto" width="490">
                </div>
            </div>
        </div>

        <div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
            <div class="relative">
                <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
                    Project Management
                </h3>
                <p class="mt-3 text-lg text-gray-500">
                    From initial assessment to final reporting, keep your restoration projects on track. Generate PDF reports for stakeholders in one click.
                </p>
            </div>
            <div class="mt-10 -mx-4 relative lg:mt-0" aria-hidden="true">
                 <img class="relative mx-auto rounded-lg shadow-lg" width="490" src="{{ asset('images/feature-restoration.png') }}" alt="Restoration Comparison">
            </div>
        </div>
    </div>
</div>

<!-- 4. HOW IT WORKS -->
<div class="bg-gray-900 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
                How It Works
            </h2>
        </div>
        <div class="mt-10">
            <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10">
                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-green-500 text-white text-xl font-bold">
                            1
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Create a Project</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-gray-400">
                        Define your goals and set up your workspace.
                    </dd>
                </div>

                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-green-500 text-white text-xl font-bold">
                            2
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Calculate Impact</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-gray-400">
                        Log materials and see your CO2 savings instantly.
                    </dd>
                </div>

                <div class="relative">
                    <dt>
                        <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-green-500 text-white text-xl font-bold">
                            3
                        </div>
                        <p class="ml-16 text-lg leading-6 font-medium text-white">Generate Reports</p>
                    </dt>
                    <dd class="mt-2 ml-16 text-base text-gray-400">
                        Share your success with PDF reports for stakeholders.
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</div>

<!-- Task 4: TESTIMONIALS -->
<div class="bg-gradient-to-t from-green-100 to-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-center text-green-900 sm:text-4xl mb-12">
            Trusted by Industry Leaders
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Review 1 -->
            <div class="bg-white p-6 rounded-lg shadow">
                <p class="text-gray-500 italic mb-4">"EcoRestore helped us win 3 major government contracts by proving our sustainability impact."</p>
                <div class="flex items-center">
                    <div class="font-bold text-gray-900">Sarah J.</div>
                    <div class="text-gray-500 text-sm ml-2">- Construction Manager</div>
                </div>
            </div>
            <!-- Review 2 -->
            <div class="bg-white p-6 rounded-lg shadow">
                <p class="text-gray-500 italic mb-4">"Finally, a way to track material lifecycles that doesn't require a PhD in environmental science."</p>
                <div class="flex items-center">
                    <div class="font-bold text-gray-900">Mark T.</div>
                    <div class="text-gray-500 text-sm ml-2">- Lead Architect</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 5. FOOTER -->
<div class="bg-green-800">
    <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            <span class="block">Ready to build sustainably?</span>
            <span class="block">Join EcoRestore Today.</span>
        </h2>
        <a href="{{ path('app_register') }}" class="mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-green-600 bg-white hover:bg-green-50 sm:w-auto">
            Get Started for Free
        </a>
        <p class="mt-8 text-sm text-green-100">
            © 2025 EcoRestore. All rights reserved.
        </p>
    </div>
</div>
{% endblock %}
