<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <script src="https://cdn.tailwindcss.com"></script>
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-gray-50 text-gray-900">
        {% if app.user %}
            <nav class="bg-white shadow">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between h-16">
                        <div class="flex">
                            <div class="flex-shrink-0 flex items-center">
                                <a href="{{ path('app_home') }}" class="font-bold text-xl text-green-600">EcoRestore</a>
                            </div>
                        </div>
                        <div class="flex items-center">
                            <span class="text-gray-500 mr-4 text-sm">{{ app.user.email }}</span>
                            <a href="{{ path('app_logout') }}" class="text-gray-500 hover:text-gray-700 font-medium text-sm">Log out</a>
                        </div>
                    </div>
                </div>
            </nav>
        {% endif %}
        
        {% block body %}{% endblock %}
    </body>
</html>
