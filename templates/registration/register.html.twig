{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex">
  <!-- Left Column: Form (50%) -->
  <div class="w-full lg:w-1/2 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-20 xl:px-24 bg-white">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <a href="{{ path('app_home') }}" class="flex items-center gap-2">
           <img src="{{ asset('images/logo.png') }}" alt="EcoRestore Logo" class="h-10 w-auto">
           <span class="font-bold text-2xl text-green-600">EcoRestore</span>
        </a>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Create an Account
        </h2>
        <p class="mt-2 text-sm text-gray-600">
            Join EcoRestore today
        </p>
      </div>

      <div class="mt-8">
        {% if registrationForm.vars.errors|length > 0 %}
            <div class="rounded-md bg-red-50 p-4 border border-red-200 mb-6">
                 <div class="text-sm text-red-700">
                     {{ form_errors(registrationForm) }}
                 </div>
            </div>
        {% endif %}

        <div class="mt-6">
          {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            
            <div>
               {{ form_label(registrationForm.email, 'Email address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
               <div class="mt-1">
                   {{ form_widget(registrationForm.email, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
               </div>
               {{ form_errors(registrationForm.email) }}
            </div>

            <div x-data="{ show: false }">
                {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1 relative">
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                    <button type="button" onclick="const input = this.previousElementSibling; input.type = input.type === 'password' ? 'text' : 'password';" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none z-20">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                </div>
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>

            <div x-data="{ show: false }">
                 {{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                 <div class="mt-1 relative">
                     {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                     <button type="button" onclick="const input = this.previousElementSibling; input.type = input.type === 'password' ? 'text' : 'password';" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none z-20">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                     </button>
                 </div>
                 {{ form_errors(registrationForm.plainPassword.second) }}
            </div>

            <div>
              <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Create Account
              </button>
            </div>
          {{ form_end(registrationForm) }}
          
          <div class="mt-6 text-center text-sm">
              <span class="text-gray-600">Already have an account?</span>
              <a href="{{ path('app_login') }}" class="font-medium text-green-600 hover:text-green-500">
                  Sign in
              </a>
          </div>

          <div class="mt-4 text-center">
              <a href="{{ path('app_home') }}" class="text-sm text-gray-500 hover:text-gray-900 no-underline">
                  &larr; Back to Home
              </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column: Image (50%) -->
  <div class="hidden lg:block relative w-0 flex-1">
    <img class="absolute inset-0 h-full w-full object-cover" src="{{ asset('images/hero-bg.png') }}" alt="EcoRestore Background">
    <div class="absolute inset-0 bg-gray-900 bg-opacity-60 flex items-center justify-center">
         <div class="text-center px-10">
             <h2 class="text-3xl font-extrabold text-white tracking-tight sm:text-4xl">
                 Building a sustainable future,<br>one project at a time.
             </h2>
         </div>
    </div>
  </div>
</div>
{% endblock %}
